{
  "name": "Octotree",
  "version": "$VERSION",
  "manifest_version": 2,
  "author": "Buu Nguyen",
  "description": "Code tree for GitHub",
  "homepage_url": "https://github.com/buunguyen/octotree",
  "icons": {
    "48": "icons/icon48.png",
    "64": "icons/icon64.png"
  },
  "permissions": [
    "https://*.github.com/*",
    "https://*.bitbucket.org/*",
    "storage"
  ],
  "web_accessible_resources": ["*.woff2"],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/*",
        "https://bitbucket.org/*"
      ],
      "js": [
        "file-icons.js",
        "jquery.js",
        "jquery-ui.js",
        "jstree.js",
        "keymaster.js",
        "ondemand.js",
        "octotree.js"
      ],
      "css": [
        "file-icons.css",
        "jstree.css",
        "octotree.css"
      ]
    }
  ]
}
